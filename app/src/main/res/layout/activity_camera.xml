<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cluex.Activities.CameraActivity">

    <Button
        android:id="@+id/add_photo_btn_xml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Photo"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498" />

    <android.support.v7.widget.CardView
        android:id="@+id/recycler_card_view_xml"
        android:layout_width="0dp"
        android:layout_height="540dp"



        android:foregroundGravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/add_photo_btn_xml">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cluex_image_gallery_recycler_view_xml"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:layout_marginLeft="17dp">

        </android.support.v7.widget.RecyclerView>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
